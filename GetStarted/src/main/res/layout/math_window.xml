<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/math_layout"
    android:layout_width="@dimen/math_window_min_width"
    android:layout_height="@dimen/math_window_min_height"
    android:background="@color/colorPrimaryDark">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/math_title_layout"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@id/math_number_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_title"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_calculate"
            android:tint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:text="Calculator"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/image_title"
            app:layout_constraintStart_toEndOf="@id/image_title"
            app:layout_constraintTop_toTopOf="@id/image_title" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/btn_rectangle"
            android:scaleType="fitXY"
            android:src="@drawable/ic_clear"
            app:layout_constraintBottom_toBottomOf="@id/image_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_title" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/math_number_layout"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/math_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/math_title_layout" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/math_formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/math_number_layout"
        app:layout_constraintTop_toTopOf="@id/math_number_layout"
        tools:text="1+1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/math_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@id/math_number_layout"
        app:layout_constraintTop_toBottomOf="@id/math_formula"
        tools:text="2" />

    <FrameLayout
        android:id="@+id/math_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/myscript_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/math_number_layout">

        <include layout="@layout/editor_view" />
    </FrameLayout>

    <include
        android:id="@+id/myscript_toolbar"
        layout="@layout/myscript_tool_bar"
        android:layout_width="0dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/math_container" />

</android.support.constraint.ConstraintLayout>